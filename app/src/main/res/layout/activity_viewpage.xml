<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_1"
    tools:ignore="ExtraText">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:background="@drawable/bgip13"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="261dp"
        android:layout_height="49dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="Mobile Phone"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints,RtlCompat" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="337dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewP1"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bgip13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewP1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@color/light_blue"
                android:gravity="center_vertical"
                android:text="Price: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="79dp"
                android:background="@drawable/baseline_shopping_cart_24"
                app:layout_constraintEnd_toStartOf="@+id/textViewP2"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP1"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP2"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bgip13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewP2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:background="@color/light_blue"
                android:gravity="center_vertical"
                android:text="Price: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP22"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/baseline_shopping_cart_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP3"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bgip13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewP1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewP3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@color/light_blue"
                android:gravity="center_vertical"
                android:text="Price: "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP3"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP32"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="79dp"
                android:background="@drawable/baseline_shopping_cart_24"
                app:layout_constraintEnd_toStartOf="@+id/textViewP4"
                app:layout_constraintTop_toTopOf="@+id/textViewP3"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP4"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bgip13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewP2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewP4"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@color/light_blue"
                android:gravity="center_vertical"
                android:text="Price: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewP4"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageViewP42"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/baseline_shopping_cart_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewP4"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

