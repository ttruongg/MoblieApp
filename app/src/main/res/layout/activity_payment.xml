<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-129dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Previous_Payment"
                android:layout_width="55dp"
                android:layout_height="48dp"
                android:background="#00C7ECF5"
                android:backgroundTint="@color/light_blue"
                android:contentDescription="Go to previous page"
                app:icon="@drawable/baseline_arrow_back_ios_24"
                app:iconTint="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/Payment"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Payment" />

            <TextView
                android:id="@+id/Payment"
                android:layout_width="356dp"
                android:layout_height="39dp"
                android:layout_marginBottom="0dp"
                android:background="@color/light_blue"
                android:fontFamily="sans-serif"
                android:text="Payments"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_Cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash payment" />

            <RadioButton
                android:id="@+id/radio_ATM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="ATM card payment" />

            <RadioButton
                android:id="@+id/radio_Ewallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E - wallet" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Temporary price" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>